<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_and_signup.LoginActivity">
    <ImageView
        android:id="@+id/imv_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp90"
        android:src="@drawable/ic_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_username_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_signup"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="User Name"
        android:padding="10dp" />
    <EditText
        android:id="@+id/edt_pass_signup"
        android:hint="Pass Word"
        android:layout_below="@+id/edt_username_signup"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/edt_pass_signup"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:text="Cancel"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_signup"
            android:text="Signup"
            android:layout_marginStart="@dimen/dp20"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>