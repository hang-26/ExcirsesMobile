<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_and_signup.LoginActivity">
    <ImageView
        android:id="@+id/imv_acount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp90"
        android:src="@drawable/icon_acount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="User Name"
        android:id="@+id/edt_username"
        android:layout_below="@+id/imv_acount"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Pass Word"
        android:id="@+id/edt_pass"
        android:layout_below="@+id/edt_username"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>