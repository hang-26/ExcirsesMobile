<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login_and_signup.LoginActivity">
    <ImageView
        android:id="@+id/imv_acount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp90"
        android:src="@drawable/ic_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_acount"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="User Name"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Pass Word"
        android:padding="10dp" />
    <LinearLayout
        android:id="@+id/linear_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/edt_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/color_tool_paste"
            android:id="@+id/tv_cancel"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp20"
            android:layout_marginStart="50dp"
            android:padding="7dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@color/color_tool_paste"
            android:id="@+id/tv_login"
            android:text="Login"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp20"
            android:layout_marginStart="@dimen/dp20"
            android:padding="7dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@color/color_tool_paste"
        android:id="@+id/tv_notU"
        android:layout_below="@+id/linear_layout"
        android:layout_margin="@dimen/dp20"
        android:textColor="@color/white"
        android:text="Do you register?"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>